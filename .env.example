# Server Configuration
PORT=8080
APP_ENV=development
SHUTDOWN_TIMEOUT=10s
HTTP_TIMEOUT=30s

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PREFIX=ai-news:
CACHE_TTL=720h  # 30 days
MAX_CONCURRENCY=5

# AI Configuration (Gemini)
AI_API_KEY=your-gemini-api-key
AI_MODEL=gemini-pro
AI_TIMEOUT=60  # seconds
AI_MAX_TOKENS=2000

# Storage Configuration
STORAGE_PATH=./data
FEED_SOURCE_PATH=./data/feeds/
PROCESSED_PATH=./data/processed/
MAX_FILE_SIZE=10485760  # 10MB in bytes
RETENTION_DAYS=30

# Logging
LOG_LEVEL=info
LOG_FILE=  # Leave empty for stdout

# Security
ADMIN_API_KEY=  # Required for admin endpoints
